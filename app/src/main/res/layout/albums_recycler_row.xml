<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_normal"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    android:background="@drawable/rounded_row_border"
    android:paddingBottom="@dimen/margin_small"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/album_name"
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_margin="@dimen/margin_small"
        />
    <TextView
        android:id="@+id/album_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintRight_toLeftOf="@+id/favourite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="6"
        />

    <com.app.musicalbums.custom_views.FontIcon
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:iconValue="@string/icon_heart"
        app:layout_constraintLeft_toRightOf="@+id/album_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/favourite"
        />

</androidx.constraintlayout.widget.ConstraintLayout>