<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="?rowColor"/>
    <stroke
        android:width="@dimen/border_width"
        android:color="?rowBorder" />

    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

    <corners
        android:bottomLeftRadius="@dimen/border_radius"
        android:bottomRightRadius="@dimen/border_radius"
        android:topLeftRadius="@dimen/border_radius"
        android:topRightRadius="@dimen/border_radius" />
</shape>